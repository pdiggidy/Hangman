ScreenManager:
    GameScreen:
    Setting:

<GameScreen>:
    name: "game"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: mistake_counter
            text: "0"
        Label:
            size_hint: 1, 0.2
            id: word
            text: "_"
            font_name: "PlayFair"
            canvas.before:
                Color:
                    rgb: (0.3, 0.3,0.3,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput
            size_hint: 1, 0.1
            id: guess_txt
            multiline: False
            on_text_validate: app.Enter()
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.15
            Button:
                text: "Restart"
                on_release:
                    app.root.current = "setting"
                    app.root.transition.direction = 'right'
            Button:
                text: "Hint"


<Setting>:
    name: "setting"
    Label:
        text: "Test"