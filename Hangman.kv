ScreenManager:
    GameScreen:
    Setting:
    Hint:

<GameScreen>:
    name: "game"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: mistake_counter
            text: "0"
        Label:
            size_hint: 1, 0.2
            id: word
            text: "_"
            font_name: "PlayFair"
            canvas.before:
                Color:
                    rgb: (0.3, 0.3,0.3,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput
            size_hint: 1, 0.1
            id: guess_txt
            multiline: False
            on_text_validate: app.Enter()
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.15
            Button:
                text: "Restart"
                on_release:
                    app.root.current = "setting"
                    app.root.transition.direction = 'right'
            Button:
                text: "Hint"
                on_release:
                    app.get_hint()
                    app.root.current = "hint"
                    app.root.transition.direction = 'left'


<Setting>:
    name: "setting"
    GridLayout:
        cols: 2
        size_hint: 0.7, 0.8
        center: root.center
        Label:
            text: "Test"
        Button:
            text: "1"
        Button
            text: "2"

<Hint>:
    name: "hint"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: hint_text
            text: ""
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Go Back."
                on_release:
                    app.root.current = "game"
                    app.root.transition.direction = 'right'
            Button:
                text: "Restart"
                on_release:
                    app.root.current = "setting"
                    app.root.transition.direction = 'right'